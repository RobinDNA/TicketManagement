    <script type="text/javascript">
        function userOperation(vote,id) {
            var arr = $('#usersManagementForm').serializeArray();
            $.ajax({
                url: '/usersmanagement?vote=' + vote + '&id='+ id,
                data: $.param(arr),
                type: 'post',
                dataType: 'text',
                success: function (msg) {
					console.log('msg:' +msg);
					if(vote == 'detail')
					{
						$('#myModal').modal('show');
					}					                    
                }

            })
        }
    </script>
</head>
